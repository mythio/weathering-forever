<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mythio.weather.ui.WeatherViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_search"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="32dp" />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:includeFontPadding="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:temperature="@{viewModel.currentWeather.temperature}"
            app:unit="@{viewModel.currentWeather.unit}"
            tools:text="34\u00B0C" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_map_pin"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:text="@{viewModel.currentWeather.location}"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_temperature"
            tools:text="Panaji, Goa" />

        <ImageView
            android:id="@+id/iv_condition"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_sun"
            android:tint="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_wind"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            app:resId="@{viewModel.currentWeather.conditionIconRes}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{viewModel.currentWeather.conditionText}"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/iv_condition"
            app:layout_constraintStart_toStartOf="@+id/iv_condition"
            app:layout_constraintTop_toBottomOf="@+id/iv_condition"
            tools:text="Clear" />

        <ImageView
            android:id="@+id/iv_wind"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_wind"
            android:tint="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@id/iv_condition"
            app:layout_constraintRight_toLeftOf="@id/iv_humidity"
            app:layout_constraintTop_toBottomOf="@id/tv_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/iv_wind"
            app:layout_constraintStart_toStartOf="@+id/iv_wind"
            app:layout_constraintTop_toBottomOf="@+id/iv_wind"
            app:unit="@{viewModel.currentWeather.unit}"
            app:windSpeed="@{viewModel.currentWeather.windSpeed}"
            tools:text="14 km/h" />

        <ImageView
            android:id="@+id/iv_humidity"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_humidity"
            android:tint="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@id/iv_wind"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimary"
            app:humidity="@{viewModel.currentWeather.humidity}"
            app:layout_constraintEnd_toEndOf="@+id/iv_humidity"
            app:layout_constraintStart_toStartOf="@+id/iv_humidity"
            app:layout_constraintTop_toBottomOf="@+id/iv_humidity"
            tools:text="21%" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>