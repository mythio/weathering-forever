<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:background="@android:color/white">

    <data>

        <variable
            name="viewModel"
            type="com.mythio.weather.ui.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:includeFontPadding="false"
            android:textSize="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:temperature="@{viewModel.currentWeather.temperature}"
            app:unit="@{viewModel.currentWeather.unit}"
            tools:text="34\u2103" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_map_pin"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_temperature"
            tools:text="Panaji, Goa" />

        <ImageView
            android:id="@+id/iv_condition"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_sun"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_wind"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            app:resId="@{viewModel.currentWeather.conditionIconRes}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{viewModel.currentWeather.conditionText}"
            app:layout_constraintEnd_toEndOf="@+id/iv_condition"
            app:layout_constraintStart_toStartOf="@+id/iv_condition"
            app:layout_constraintTop_toBottomOf="@+id/iv_condition"
            tools:text="Clear" />

        <ImageView
            android:id="@+id/iv_wind"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_wind"
            app:layout_constraintLeft_toRightOf="@id/iv_condition"
            app:layout_constraintRight_toLeftOf="@id/iv_humidity"
            app:layout_constraintTop_toBottomOf="@id/tv_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_wind"
            app:layout_constraintStart_toStartOf="@+id/iv_wind"
            app:layout_constraintTop_toBottomOf="@+id/iv_wind"
            app:unit="@{viewModel.currentWeather.unit}"
            app:windSpeed="@{viewModel.currentWeather.windSpeed}"
            tools:text="14 km/h" />

        <ImageView
            android:id="@+id/iv_humidity"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_humidity"
            app:layout_constraintLeft_toRightOf="@id/iv_wind"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:humidity="@{viewModel.currentWeather.humidity}"
            app:layout_constraintEnd_toEndOf="@+id/iv_humidity"
            app:layout_constraintStart_toStartOf="@+id/iv_humidity"
            app:layout_constraintTop_toBottomOf="@+id/iv_humidity"
            tools:text="21%" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>