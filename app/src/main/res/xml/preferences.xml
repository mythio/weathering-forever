<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="GENERAL">

        <ListPreference
            app:defaultValue="unit_metric"
            app:entries="@array/unit_entries"
            app:entryValues="@array/unit_values"
            app:key="app_unit"
            app:title="Unit"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="theme_system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="app_theme"
            app:title="Theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="ABOUT">

        <Preference
            app:key="app_support"
            app:summary="mythio.2909@gmail.com"
            app:title="Support" />

        <Preference
            app:key="app_licence"
            app:summary="Open-source licences"
            app:title="Licence" />

        <Preference
            app:key="app_version"
            app:summary="version"
            app:title="Version" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
